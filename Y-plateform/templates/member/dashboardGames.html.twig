{% extends 'base.html.twig' %}

{% block title %}Dashboard Member{% endblock %}

{% block link %}
<link rel="stylesheet" href="{{ asset('/css/sb-admin-2.min.css')}}">
<link rel="stylesheet" href="{{ asset('/css/dashboard.css')}}">
<link rel="stylesheet" href="{{ asset('/css/dashboard_member.css')}}">
<link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

    <style>
    #wrapper #content-wrapper #content {
        position: relative;
    }

    .popup {
        background: rgba(0, 0, 0, 0.6);
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0%;
        display: none;
        justify-content: center;
        align-items: flex-start;
    }

    .popup-content {
        height: 460px;
        width: 600px;
        background: white;
        padding: 20px;
        border-radius: 2px;
        position: relative;
        box-shadow: 6px 6px 29px -4px rgba(0, 0, 0, 0.75);
        text-align: center;
    }

    .popup-content input[type=text]  {
        margin: 5px auto;
        display: block;
        padding: 8px;
        height: 40px;
        width: 384px;
        background: #f8f8f8;
        border: 1px solid #ededed;
        box-sizing: border-box;
        box-shadow: inset 0 1px 4px rgba(0, 0, 0, .25);
        border-radius: 6px;
    }

    textarea {
        resize: none;
        margin: 5px auto;
        display: block;
        padding: 8px;
        width: 384px;
        background: #f8f8f8;
        border: 1px solid #ededed;
        box-sizing: border-box;
        box-shadow: inset 0 1px 4px rgba(0, 0, 0, .25);
        border-radius: 6px;
    }

    .close {
        position: absolute;
        top: 5px;
        right: 5px;
        cursor: pointer;
    }

    .addGame{

        text-align: center;
        font-family: 'Poppins', sans-serif;
        color: #FF3838;
    }

    .btn-add{
        width: 384px;
        height: 47px;
        font-size: large;
        color: white;
        background: rgba(255, 56, 56, 0.9);
        font-family: 'Poppins', sans-serif;
        font-weight: 700;
        border-radius: 8px;
    }

    .search-js {
        margin: 5px auto;
        display: block;
        width: 50%;
        padding: 8px;
        height: 40px;
        width: 384px;
        background: #f8f8f8;
        border: 1px solid #ededed;
        box-sizing: border-box;
        box-shadow: inset 0 1px 4px rgba(0, 0, 0, .25);
        border-radius: 6px;
    }

</style>
{% endblock %}

{% block content %}
            <!-- Begin Page Content -->
            <div class="container__top">
                <h2>Mes jeux</h2>
                <button class="button_top add-game-js" type="button"><a href="#" class="button_top-text">Ajouter un jeu</a></button>
            </div>
            <div class="container__body">
            {% for game in games %}
            <a href="{{ path('memberDashboardGame', {'id': game.id}) }}">
                <div class="container__body-t">
                    <div class="container__body-t-t">
                        <h4>{{game.name}}</h4>
                    </div>
                    <div class="container__body-t-i">
                        <img src="{{ asset('/gameImg/')}}{{game.img}}" alt="">
                    </div>
                </div>
                {% endfor %}
            </div>
        </a>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-black">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2019</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <div class="popup">
        <div class="popup-content">
            <img class="close" src="{{ asset('/img/close.png')}}" alt="">
            <h1 class="addGame">Ajouter un jeu</h1>
            {{form_start(formGame)}}

            {{form_widget(formGame)}}
            {# <label for="">Categories</label>
            <input class="search-js" type="text"> #}

            <input class="search-js" type="text" placeholder="CatÃ©gorie" ><br>

            <div class="result-search-js"></div>
            <button type="submit" class="btn-add">
                Ajouter
            </button>

            {{form_end(formGame)}}

        </div>
    </div>
    {% endblock %}

    {% block js %}
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>

    <script>

        var addGame = document.querySelector('.add-game-js')
        addGame.addEventListener('click', function () {
            document.querySelector('.popup').style.display = 'flex'
        })

        document.querySelector('.close').addEventListener('click', function () {
            document.querySelector('.popup').style.display = 'none'
            document.querySelector('body').style.overflow = 'visible'
        })

        document.querySelector('.close').addEventListener('click', function () {
            document.querySelector('.popup').style.display = 'none'
            document.querySelector('body').style.overflow = 'visible'
        })


        $(document).ready(function () {
            $('.search-js').keyup(function () {
                $('.result-search-js').html('');
                var category = $(this).val();

                if (category != '') {
                    $.ajax({
                        type: 'GET',
                        url: "{{ path('searchCategory') }}",
                        data: 'category=' + encodeURIComponent(category),
                        success: function (data) {
                            if (data != "") {
                                $('.result-search-js').append(data);
                                /*var searchBar = document.querySelectorAll('.search-bar')
                                searchBar.forEach(value => {
                                    console.log(value)
                                    value.addEventListener('click', function(){
                                        value.checked = true
                                    })
                                });*/

                                // console.log(data);
                            } else {
                                $('.result-search-js').textContent = "aucune categorie";
                            }
                        }
                    })

                }

            })
        });
    </script>
    {% endblock %}